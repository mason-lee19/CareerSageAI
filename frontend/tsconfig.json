{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Allows mixing JS and TS during migration
    "skipLibCheck": true,
    "strict": true, // Recommended for full type safety
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Next.js/Babel handles emitting files
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // or "react-jsx" for React 17+
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] // Optional: Alias imports
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
